        <li class="nav-item">
          <a class="nav-link" href="{{ path('cap')}}">Capsules</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('about')}}">A propos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('contact')}}">Contact</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    {% block body %}{% endblock %}
  </div>

  <footer class="bg-dark text-center text-lg-start rounded-top-4 mt-5">
    <!-- Copyright -->
