{% extends 'base.html.twig' %}

{% block body %}
  <section>
      <h2>Capsules</h2>
      <p>Toutes les capsules :</p>

      <div class="row">
        {% for cap in caps %}
          <article class="col-md-2 jc-card-cap-warpper col-sm-4 col-6 p-1">
            <div class="card jc-card-cap p-2" style="z-index:{{ 10000 - loop.index }}">
              <img class="w-100 p-3" src="{{ asset('uploads/capsules/' ~ cap.getPicturePath() ) }}" alt="Pas d'image disponible">
              <div>
                <h4 class="text-center mt-2">{{ cap.name }}</h4>
                <hr class="col-6 m-auto">
                <ul class="p-0 mt-2">
                  <li><small>Producteur : {{ cap.getBrewery() is same as(null) ? 'Aucun' : cap.getBrewery().name }}</small></li>
                  <li><small>N° Lambert : {{ cap.getNumLambert() }}</small></li>
                  <li><small>Côte de tirage : {{ cap.getCotation() }}</small></li>
                  <li><small>Ajouté le : {{ cap.getCreatedAt() | date }}</small></li>
                </ul>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
  </section>
{% endblock %}