{% extends 'base.html.twig' %}

{% block title %}Connexion administrateur{% endblock %}

{% block body %}

{% if hasError %}
    <div class="alert alert-danger col-md-3 mx-auto">
        Identifiant incorrect
    </div>
{% endif %}

<div class="row">
    <div class="col-md-3 p-2 card mx-auto">
        <form action="{{ path('admin_login') }}" method="POST">
            <div class="form-group mt-2">
                <label for="name">Nom</label>
                <input type="text" name="_username" id="nameLogin" class="form-control" placeholder="Votre nom" value="{{ username}}" required>
            </div>
            <div class="form-group mt-2">
                <label for="psawword">Mot de passe</label>
                <input type="password" name="_password" id="passwordLogin" placeholder="Mot de passe" class="form-control" required>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
