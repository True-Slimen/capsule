{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block body %}
    <section>
        <div class="row">
            <h2>Dashboard</h2>
        </div>
        <div class="row">
            <div class="col-6 border rounded-4 p-3">
                <h6>Ajouter une capsule</h6>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cum eum similique culpa, deleniti, sit dolorum veritatis nemo, facilis ipsa optio quam. Nemo, aspernatur? Iure libero culpa nesciunt id, rem laudantium!</p>

                {{ form_start(form) }}

                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        
    </section>

    {% block form_row %}
        {{ dump() }}
        <div class="form-group">
            {{ form_label(form) }}
            {{ form_widget(form) }}
        </div>
    {% endblock %}

    {% block text_widget %}
        <input type="text" name="{{full_name}}" id="{{id}}" class="form-control">
    {% endblock %}

{% endblock %}